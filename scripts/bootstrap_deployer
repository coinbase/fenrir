#!/bin/bash
# bootstrap bifrost
# assume-role to the correct account
set -e

go build . # Build for your operating system
go install

# Build linux lambda for upload
./scripts/build_lambda_zip


step bootstrap                         \
  -lambda "infra-fenrir" \
  -step "infra-fenrir"   \
  -states "$(fenrir json)"\
  -project "infra/fenrir"\
  -config "development"

rm lambda.zip
